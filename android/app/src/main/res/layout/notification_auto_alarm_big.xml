<?xml version="1.0" encoding="utf-8"?>
<!-- 자동알람 알림 - 펼친 상태 (진행바 + 상세 정보) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="14dp">

    <!-- 상단: 버스 뱃지 + 도착 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 버스 번호 뱃지 -->
        <LinearLayout
            android:id="@+id/badge_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_bus_badge"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_bus_notification"
                android:contentDescription=""
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/tv_bus_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 도착 시간 (큰 텍스트) -->
        <TextView
            android:id="@+id/tv_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 남은 정류장 -->
        <TextView
            android:id="@+id/tv_remaining_stops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:alpha="0.8" />
    </LinearLayout>

    <!-- 정류장명 -->
    <TextView
        android:id="@+id/tv_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:alpha="0.7"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp" />

    <!-- 진행바 (버스 이동 표시) -->
    <FrameLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="10dp">

        <!-- 트랙 배경 -->
        <View
            android:id="@+id/track_bg"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_progress_track" />

        <!-- 진행 바 -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center_vertical"
            android:max="100"
            android:progressDrawable="@drawable/progress_bus_alarm" />

        <!-- 버스 아이콘 (진행바 위에서 이동) -->
        <ImageView
            android:id="@+id/iv_bus_tracker"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/ic_bus_tracker"
            android:contentDescription="" />
    </FrameLayout>

    <!-- 버스 현재 위치 -->
    <TextView
        android:id="@+id/tv_current_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:alpha="0.6"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>
